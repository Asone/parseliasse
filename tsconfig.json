{
    "compilerOptions": {
      "target": "es6",
      "lib" : ["es6"],
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "strictNullChecks":false,
      "resolveJsonModule": true,
      "sourceMap": true
    },
    "include": [
      "./index.ts",
      "src/**/*.ts",
      "src/**/*.d.ts"
    ],
    "exclude": [
      "node_modules",
      "src/**/*.e2e.ts",
      "src/**/*.spec.ts",
      "src/**/__tests__/*.ts",
      "dist/*"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  }
  